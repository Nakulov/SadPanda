<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".18"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".82"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/usernameTopLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".33"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/loginBtnTopLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".66"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/titleTopLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".16"
    />

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sad Panda"
            android:textSize="28dp"
            android:textColor="#fff"
            app:layout_constraintStart_toStartOf="@id/startLine"
            app:layout_constraintTop_toTopOf="@id/titleTopLine"
    />

    <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="dsadasda"
            app:layout_constraintStart_toStartOf="@id/startLine"
            app:layout_constraintEnd_toEndOf="@id/endLine"
            app:layout_constraintTop_toTopOf="@id/usernameTopLine"
    />

    <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="dsadasda"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/startLine"
            app:layout_constraintEnd_toEndOf="@id/endLine"
            app:layout_constraintTop_toBottomOf="@id/username"
    />

    <Button
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Log in"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:elevation="1dp"
            android:stateListAnimator="@null"
            android:translationZ="4dp"
            android:background="@drawable/button_login"
            app:layout_constraintStart_toStartOf="@id/startLine"
            app:layout_constraintEnd_toEndOf="@id/endLine"
            app:layout_constraintTop_toTopOf="@id/loginBtnTopLine"
    />

</androidx.constraintlayout.widget.ConstraintLayout>